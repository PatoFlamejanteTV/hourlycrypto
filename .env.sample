# .env.sample â€” Hourly Crypto Telegram Bot
# Copy this file to .env and fill in your secrets.
# Coin selection uses CoinGecko IDs (not symbols).
#
# Mappings used here:
# - Bitcoin (BTC)      -> bitcoin
# - Tether (USDT)      -> tether
# - Toncoin (TON)      -> toncoin
# - Tether Gold (XAUT) -> tether-gold

# REQUIRED
TELEGRAM_BOT_TOKEN=REPLACE_WITH_YOUR_BOTFATHER_TOKEN
TELEGRAM_CHAT_ID=@yourchannelusername  # or numeric like -1001234567890

# OPTIONAL / RECOMMENDED
CURRENCY=usd
# Explicit coin selection (overrides TOP_N)
COIN_IDS=bitcoin,tether,toncoin,tether-gold

# Display options
INCLUDE_MARKET_CAP=false
INCLUDE_24H=true
INCLUDE_1H=true

# Scheduling for continuous mode (ignored in --once)
INTERVAL_MINUTES=60

# If COIN_IDS is set, TOP_N is ignored.
# TOP_N=10
